@font-face
  font-family: 'Reem Kufi'
  font-style: normal
  src: local('Reem Kufi Regular'), local('ReemKufi-Regular'), url('../assets/reem-kufi.woff2') format('woff2')
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

::selection
  background: transparent

*
  box-sizing: border-box
  -webkit-user-select: none
  user-select: none
  cursor: default

body
  position: absolute
  width: 100%
  height: 100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-content: center
  margin: 0
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica Neue, helvetica
  font-weight: 300
  background-color: #333
  color: #fff
  opacity: 0
  transform: scale(0.9)
  animation: 0.4s ease 0s 1 normal forwards fadein
  
h1
  font-family: Reem Kufi
  margin: 0 0 0 10px
  font-size: 45px

p, small
  text-align: center

p
  width: 100%
  font-size: 12px

small
  font-size: 10px

@keyframes fadein
  0%
    opacity: 0
    transform: scale(0.95)
  100%
    opacity: 1
    transform: scale(1.0)
  
#titlebar
  -webkit-app-region: drag
  -webkit-user-select: none
  user-select: none
  z-index: 20
  position: fixed
  height: 40px
  width: 100%
  top: 0
  left: 0

#logo
  display: flex
  perspective: 300px
  
#galeri
  height: 60px
  width: 60px
  opacity: 0
  transform: scale(0) translate3d(15px, 0, 0)
  animation 0.7s ease-in 0s 1 normal forwards move-left
  border: 5px solid #eee
  border-radius: 100%

@keyframes move-left
  0%
    opacity: 0
    transform: scale(0.0) translate3d(15px, 0)
  60%
    transform: scale(1.1) translate3d(0, 0, 0)
  80%
    transform: scale(0.9) translate3d(0, 0, 0)
  100%
    opacity: 1
    transform: scale(1.0) translate3d(0, 0, 0)

#logo-title
  opacity: 0
  transform: translate3d(-15px, 0, 0)
  animation 0.4s cubic-bezier(0.165, 0.840, 0.440, 1.000) 0.3s 1 normal forwards move-right

@keyframes move-right
  from
    opacity: 0
    transform: translate3d(-15px, 0)

  to
    opacity: 1
    transform: translate3d(0, 0, 0)

#devtools
#reset
  position: absolute
  bottom: 10px

#devtools:hover
#reset:hover
  text-decoration: underline

#devtools
  left: 10px

#reset
  right: 10px