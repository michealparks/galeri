::selection
  background-color: transparent
  
*
  background-color: transparent

body, html
  overflow: hidden
  margin: 0
  font-family: -apple-system-headline, "Segoe UI", helvetica neue, helvetica
  background-color: transparent

.bg
  overflow: hidden
  position: absolute
  width: 100%
  height: 100%
  left: 0
  top: 0
  background-size: cover
  background-position: center
  
#bg-1
  opacity: 0
  transition: opacity 2500ms
  
.bg-active
  opacity: 1 !important

.bg-top
  background-position: 50% 25%

.no-transition
  transition: none

#description
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  padding: 0 10px
  background-color: rgba(0,0,0,0.1)
  line-height: 1.3
  font-weight: 300
  color: rgba(255, 255, 255, 0.7)
  transition: background-color 2500ms, opacity 2500ms

  h3, p
    position: absolute
    margin: 0
    padding: 2px 6px
    background-color: rgba(0,0,0,0.6)
    transform: translate3d(0, 0, 0)
    transition: opacity 700ms, transform 700ms cubic-bezier(0.25, 0.46, 0.45, 0.94)

  h3
    bottom: 41px
    font-weight: 100
    font-size: 1.3em
    
  p
    bottom: 16px
    font-size: 0.8em
    transition-delay: 200ms
    
  &.hidden
    opacity: 0
    background: transparent

  &.left h3, &.left p
    transform: translate3d(0, 5px, -5px)
    opacity: 0

  &.bottom h3, &.bottom p
    transform: translate3d(0, -5px, -5px)
    opacity: 0

  &.top h3, &.top p
    bottom: auto

  &.top h3
    top: 30px

  &.top p
    top: 64px

  &.invisible h3, &.invisible p
    opacity: 0

.windows #description
  h3
    bottom: 76px
    
  p
    bottom: 51px


