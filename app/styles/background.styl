::selection
  background: transparent

body
  margin: 0
  font-family: -apple-system-headline, "Segoe UI", helvetica neue, helvetica

.bg
  position: absolute
  width: 100%
  height: 100%
  left: 0
  top: 0
  background-size: cover
  background-position: center
  
.bg--active
  opacity: 1 !important

.bg--top
  background-position: 50% 25%

#bg_1
  opacity: 0
  transition: opacity 2500ms

.no-transition
  transition: none

.description
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  padding: 0 10px
  background-color: rgba(0,0,0,0.1)
  line-height: 1.3
  font-weight: 300
  color: rgba(255, 255, 255, 0.7)
  transition: background-color 2500ms, opacity 2500ms

.description h3
.description p
  position: absolute
  margin: 0
  padding: 2px 6px
  background-color: rgba(0,0,0,0.6)
  transform: translate3d(0, 0, 0)
  transition: opacity 700ms cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 700ms cubic-bezier(0.25, 0.46, 0.45, 0.94)

.description h3
  bottom: 41px
  font-weight: 100
  font-size: 1.3em

.windows .description h3
  bottom: 76px

.description p
  bottom: 16px
  font-size: 0.8em
  transition-delay: 200ms

.windows .description p
  bottom: 51px

.description--hidden
  opacity: 0
  background: transparent

.description--left h3
.description--left p
  transform: translate3d(0, 5px, -5px)
  opacity: 0

.description--bottom h3
.description--bottom p
  transform: translate3d(0, -5px, -5px)
  opacity: 0

.description--top h3
.description--top p
  bottom: auto

.description--top h3
  top: 30px

.description--top p
  top: 64px

.description--invisible h3
.description--invisible p
  opacity: 0
