{
  "name": "Galeri",
  "productName": "Galeri",
  "version": "0.0.28",
  "author": {
    "name": "Micheal Parks",
    "email": "michealparks1989@gmail.com",
    "url": "https://www.galeri.io"
  },
  "description": "A perpetual artwork streaming app.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "test": "depcheck",
    "start:dev": "cross-env NODE_ENV=development electron ./main",
    "start:prod": "cross-env NODE_ENV=production electron ./main",
    "start": "cross-env NODE_ENV=production electron ./main",
    "wp:dev": "node webpack dev",
    "dev": "npm run wp:dev && concurrently -k \"npm run wp:dev watch\" \"npm run start:dev\"",
    "package": "cross-env NODE_ENV=production node ./bin/package",
    "package:mac": "node webpack && node ./bin/package darwin --sign",
    "package:win": "node webpack && node ./bin/package win32",
    "pack:mac": "node webpack 0 0 darwin && build --mac",
    "pack:linux": "node webpack 0 0 linux && build --linux",
    "pack:win": "node webpack 0 0 win && build --win",
    "analytics": "open -a \"Google Chrome\" bin/analytics.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michealparks/galeri.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michealparks/galeri/issues"
  },
  "homepage": "https://www.galeri.io",
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "optionalDependencies": {
    "appdmg": "^0.5.2"
  },
  "devDependencies": {
    "asar": "^0.14.3",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "cross-zip": "^2.1.5",
    "del": "^3.0.0",
    "depcheck": "^0.6.9",
    "devtron": "^1.4.0",
    "electron": "3.0.0-beta.3",
    "electron-builder": "^20.26.0",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-osx-sign": "^0.4.10",
    "electron-packager": "^12.1.0",
    "electron-winstaller": "^2.6.4",
    "html-minifier": "^3.5.19",
    "inline-source": "^6.1.5",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nobin-debian-installer": "0.0.10",
    "node-fetch": "^2.2.0",
    "run-series": "^1.1.8",
    "stylus": "^0.54.5",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.2"
  },
  "dependencies": {
    "htmlparser2": "^3.9.2"
  },
  "standard": {
    "globals": [
      "__root__",
      "__VERSION__",
      "__dev__",
      "__darwin__",
      "__linux__",
      "__win32__",
      "Image",
      "XMLHttpRequest",
      "fetch",
      "localStorage"
    ]
  },
  "build": {
    "appId": "io.galeri.app",
    "copyright": "Copyright Â© 2016 - 2018 Space Egg",
    "productName": "Galeri",
    "files": [
      "package.json",
      "LICENSE",
      "main.js",
      "build/**/*",
      "assets"
    ],
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        "deb",
        "snap"
      ],
      "category": "Education",
      "synopsis": "A perpetual artwork streaming app.",
      "desktop": {
        "Type": "Application",
        "Encoding": "UTF-8",
        "Name": "Galeri",
        "Version": "1.0",
        "X-GNOME-FullName": "Galeri",
        "Comment": "A perpetual artwork streaming app.",
        "Icon": "Galeri",
        "Terminal": "false",
        "Path": "/opt/galeri",
        "Exec": "/opt/galeri/Galeri %U",
        "TryExec": "/opt/galeri/Galeri",
        "StartupNotify": "false",
        "Categories": "Productivity;Education"
      }
    },
    "snap": {
      "plugs": [
        "home",
        "x11",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "opengl"
      ]
    }
  }
}
