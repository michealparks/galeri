{
  "name": "Galeri",
  "productName": "Galeri",
  "version": "0.1.0",
  "author": {
    "name": "Micheal Parks",
    "email": "michealparks1989@gmail.com",
    "url": "https://www.galeri.io"
  },
  "description": "A perpetual artwork streaming app.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development node bin/webpack.js",
    "build": "cross-env NODE_ENV=production node bin/webpack.js",
    "start:dev": "cross-env NODE_ENV=development electron ./build/main",
    "start": "cross-env NODE_ENV=production electron ./build/main",
    "analytics": "open -a \"Google Chrome\" bin/analytics.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michealparks/galeri.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michealparks/galeri/issues"
  },
  "homepage": "https://www.galeri.io",
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^9.4.0",
    "wallpaper": "^4.4.0",
    "webpack": "^4.30.0"
  },
  "standard": {
    "globals": [
      "__root__",
      "__VERSION__",
      "__dev__",
      "__darwin__",
      "__linux__",
      "__win32__",
      "Image",
      "XMLHttpRequest",
      "fetch",
      "localStorage"
    ]
  },
  "build": {
    "appId": "io.galeri.app",
    "copyright": "Copyright Â© 2016 - 2018 Space Egg",
    "productName": "Galeri",
    "files": [
      "package.json",
      "LICENSE",
      "main.js",
      "build/**/*",
      "assets"
    ],
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        "deb",
        "snap"
      ],
      "category": "Education",
      "synopsis": "A perpetual artwork streaming app.",
      "desktop": {
        "Type": "Application",
        "Encoding": "UTF-8",
        "Name": "Galeri",
        "Version": "1.0",
        "X-GNOME-FullName": "Galeri",
        "Comment": "A perpetual artwork streaming app.",
        "Icon": "Galeri",
        "Terminal": "false",
        "Path": "/opt/galeri",
        "Exec": "/opt/galeri/Galeri %U",
        "TryExec": "/opt/galeri/Galeri",
        "StartupNotify": "false",
        "Categories": "Productivity;Education"
      }
    },
    "snap": {
      "plugs": [
        "home",
        "x11",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "opengl"
      ]
    }
  }
}
