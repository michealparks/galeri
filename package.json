{
  "name": "galeri",
  "productName": "Galeri",
  "version": "0.1.0",
  "main": "build/electron.js",
  "author": {
    "name": "Micheal Parks",
    "email": "michealparks1989@gmail.com",
    "url": "https://www.galeri.io"
  },
  "description": "A perpetual artwork streaming app.",
  "scripts": {
    "rollup": "rollup -c -w --environment DEV",
    "build": "rollup -c --environment PROD",
    "start": "cross-env NODE_ENV=development electron --trace-warnings ./build/electron.js",
    "start:prod": "cross-env NODE_ENV=production electron ./build/electron.js",
    "analytics": "open -a \"Google Chrome\" bin/analytics.html",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mw --x64 --arm64",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michealparks/galeri.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michealparks/galeri/issues"
  },
  "homepage": "https://www.galeri.io",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/node": "^14.14.37",
    "cheerio": "^1.0.0-rc.5",
    "cross-env": "^7.0.3",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "rollup": "^2.44.0",
    "rollup-plugin-terser": "^7.0.2",
    "wallpaper": "^4.4.2"
  },
  "build": {
    "appId": "io.galeri.app",
    "productName": "Galeri",
    "compression": "maximum",
    "files": [
      "apis/**/*",
      "assets/**/*",
      "build/electron.js",
      "electron/**/*",
      "utils/**/*",
      "node_modules/**/*",
      "config.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        "deb",
        "snap"
      ],
      "category": "Education",
      "synopsis": "A perpetual artwork streaming app.",
      "desktop": {
        "Type": "Application",
        "Encoding": "UTF-8",
        "Name": "Galeri",
        "Version": "1.0",
        "X-GNOME-FullName": "Galeri",
        "Comment": "A perpetual artwork streaming app.",
        "Icon": "Galeri",
        "Terminal": "false",
        "Path": "/opt/galeri",
        "Exec": "/opt/galeri/Galeri %U",
        "TryExec": "/opt/galeri/Galeri",
        "StartupNotify": "false",
        "Categories": "Productivity;Education"
      }
    },
    "snap": {
      "plugs": [
        "home",
        "x11",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "opengl"
      ]
    }
  },
  "dependencies": {
    "htmlparser2": "^6.0.1"
  }
}
