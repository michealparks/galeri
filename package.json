{
  "name": "galeri",
  "productName": "Galeri",
  "version": "0.1.0",
  "main": "electron.cjs",
  "type": "module",
  "author": {
    "name": "Micheal Parks",
    "email": "michealparks1989@gmail.com",
    "url": "https://www.galeri.io"
  },
  "description": "A perpetual artwork streaming app.",
  "scripts": {
    "start": "vite",
    "build:extension": "vite build",
    "start:extension": "vite preview",
    "rollup": "rollup -c -w --environment DEV",
    "build:app": "rollup -c --environment PROD",
    "start:app": "cross-env NODE_ENV=development electron --trace-warnings ./build/electron.cjs",
    "start:prod": "cross-env NODE_ENV=production electron ./build/electron.cjs",
    "analytics": "open -a \"Google Chrome\" bin/analytics.html",
    "pack": "electron-builder --dir",
    "pack:win": "electron-builder -w --x64",
    "dist": "electron-builder -mw --x64 --arm64",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ignore-path .gitignore ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michealparks/galeri.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michealparks/galeri/issues"
  },
  "homepage": "https://www.galeri.io",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@sveltejs/vite-plugin-svelte": "^1.0.9",
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "cheerio": "1.0.0-rc.12",
    "cross-env": "^7.0.3",
    "electron": "^21.2.0",
    "electron-builder": "23.6.0",
    "electron-serve": "^1.1.0",
    "electron-unhandled": "^4.0.1",
    "electron-util": "^0.17.2",
    "eslint": "^8.26.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "gh-pages": "^4.0.0",
    "localforage": "^1.10.0",
    "nanoid": "^4.0.0",
    "postcss": "^8.4.18",
    "rollup": "^3.2.3",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.55.0",
    "svelte": "^3.52.0",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.2.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "wallpaper": "^6.1.1"
  },
  "build": {
    "asar": false,
    "appId": "io.galeri.app",
    "productName": "Galeri",
    "compression": "maximum",
    "files": [
      "electron.cjs",
      {
        "from": "build",
        "to": "",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "@xstate/svelte": "^2.0.0",
    "xstate": "^4.33.6"
  }
}
